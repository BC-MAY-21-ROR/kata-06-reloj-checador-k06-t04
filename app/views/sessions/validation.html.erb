  <div class="logo">
    <h1>Foo Corp</h1>
  </div>

<div class="login_container_row">
  <div class="login_container_column">
    <div class="time">
    Login
    </div>
    <%= form_tag login_path do %>
      <div class="form-group">
        Email:
        <div id="block-text">
        <%= text_field_tag :email_admin, '', class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        Password:
        <%= password_field_tag :password, '', class: "form-control" %>
      </div>
      <% flash.each do |type, msg| %>
        <div class="alert alert-info text-center">
          <%= msg %>
        </div>
      <% end %>
      <div class="buttons">
      <input type="submit" value="Login" id="btnLogin" >
      </div>
    <% end %>
    <div class="buttons">
      <%= link_to "Back", root_path, class: "btn btn-info" %>
    </div>
  </div>
</div>
