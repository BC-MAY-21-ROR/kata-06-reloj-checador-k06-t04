<div id="table">  
  <table class="table table-striped">
    <thead>
      <tr>
        <th id="th-private">Private Number</th>
        <th id="th-number">Number</th>
        <th id="th-name">Name</th>
        <th id="th-email">Email</th>
        <th id="th-position">Position</th>
        <th id="th-admin">Administrator Id</th>
        <th colspan="2" id="th-options">Options</th>
      </tr>
    </thead>
    <tbody>
      <% @employee.each do |employee| %>
        <tr>
          <td>
            <%= employee.id %>
          </td>
          <td>
            <%= employee.employee_number %>
          </td>
          <td>
            <%= employee.name_employee %>
          </td>
          <td>
            <%= employee.email_employee %>
          </td>
          <td>
            <%= employee.position_employee %>
          </td>
          <td>
            <%= employee.administrator_id %>
          </td>
          <td id="tr-edit">
            <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-warning" %>
          </td>
          <td id="tr-deactivate">
            <%= link_to "Deactivate", employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>

        </tr>
      <% end %>
      <% flash.each do |type, msg| %>
        <div class="alert alert-info text-center">
          <%= msg %>
        </div>
      <% end %>
    </tbody>
  </table>
</div>
  