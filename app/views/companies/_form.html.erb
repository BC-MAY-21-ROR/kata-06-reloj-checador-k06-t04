<%= form_for(@company) do |company| %>
  
  <div class="form-group">
    <%= company.label :name_company, class: "form-label"%>
    <%= company.text_field :name_company, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= company.label :address, class: "form-label"%>
    <%= company.text_field :address, class: "form-control"%>
  </div>

  <%= company.submit "Save", class: "btn btn-success"%>

<% end %>